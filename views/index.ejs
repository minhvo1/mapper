  <!-- Scripts -->
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/mapInitialize.js"></script>
  <script type="text/javascript" src="/scripts/addNewMap.js"></script>
  <script type="text/javascript" src="/scripts/loadUserMaps.js"></script>
  <script src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js"
