<body>
  <div class="marker-dropdown">
    <button>ðŸ“Œ</button>
    <div class="marker-list-pop">
    </div>
  </div>


  <!-- Side nav panel -->
  <div class="side-nav">
    <!-- Logo -->
    <section class="logo" data-user="<%= userInfo.id %>">
      <p><strong>WikiMap</strong></p>
    </section>
    <section class="user-welcome">
      <p><strong>Hi, <%= userInfo.first_name %></strong></p>
      <div class="user-action-buttons">
        <!-- User profile button -->
        <form action="/api/users/me" method="GET">
          <button class="profile-button" type="submit">Profile</button>
        </form>
        <!-- Log out button -->
        <form action="/api/users/logout" method="GET">
          <button class="logout-button" type="submit">Sign out</button>
        </form>

      </div>
    </section>


    <!-- User maps menu -->
    <div class="maps-main-header">
      <p id="user-maps-header">Maps</p>
      <p id="user-maps-header-creator">By</p>
    </div>
    <section class="user-menu">
      <div class="user-maps">
        <ul class="map-list" style="list-style: square">
      </div>
      <div class="add-map-form">
        <form class="map-form" method="POST" action="/api/maps">

          <div>
            <input class="map-form-input" type="text" name="mapName" placeholder="Add a new map" required>
            <button class="add-map-button" type="submit">Add</button>
          </div>
        </form>
      </div>
    </section>
  </div>
  <!-- Map body -->
  <div class='custom-popup' id='map'></div>

