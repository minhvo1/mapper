</head>

<body>
  <!-- Side nav panel -->
  <div class="side-nav">
    <!-- Logo -->
    <section class="logo">
      <p><strong>Map</strong></p>
    </section>
    <section class="user-welcome">
      <p><strong>Welcome, User!</strong></p>
      <button class="logout-button" type="submit">Logout</button>
    </section>

    <!-- User maps menu -->
    <section class="user-menu">
      <div class="user-maps">
        <h3>My Maps</h3>
        <div class="currentMap"></div>
        <ul class="map-list">

      </div>
      <div class="add-map-form">
        <form class="map-form" method="POST" action="/api/maps">
          <label class="form-label" for="mapName"><b>Map Name</b></label>
          <input class="map-form-input" type="text" name="mapName" required>
          <button class="add-map-button" type="submit">Add New Map</button>
        </form>
      </div>
    </section>
  </div>
  <!-- Map body -->
  <div id="map">
  </div>
  <!-- Map name input form -->

